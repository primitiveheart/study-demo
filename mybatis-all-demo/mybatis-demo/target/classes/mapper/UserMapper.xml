<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zgb.mybatis.demo.UserMapper">

  <cache/>

  <resultMap id="baseResultMap" type="userDo">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="city" column="city"/>
  </resultMap>

  <sql id="Base_Column_List">
    id, name, city
  </sql>

  <select id="selectUser" parameterType="int" resultType="com.zgb.mybatis.demo.UserDO" useCache="true">
    select
    <include refid="Base_Column_List">
    </include>
    from users where id = #{id}
  </select>

  <update id="updateUserById" parameterType="userDo">
            update users set name = #{name}, city = #{city} where id = #{id}
  </update>

  <select id="listByConditions" parameterType="userQuery" resultMap="baseResultMap">
    select
    <include refid="Base_Column_List"/>
    from users
    <where>
      <if test="ids != null and ids.size() > 0">
        AND id IN
        <foreach collection="ids" item="item" open="(" close=")" separator=",">
          #{item}
        </foreach>
      </if>
      <if test="name != null and name != ''">
        AND name LIKE CONCAT('%', #{name}, '%')
      </if>
    </where>
  </select>
</mapper>
